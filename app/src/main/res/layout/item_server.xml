<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/main_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Server"
        android:textSize="@dimen/ts_big"
        android:id="@+id/tv_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_name"
        android:id="@+id/ll_players">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_players"
            android:textSize="@dimen/ts_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/ts_normal"
            android:text="1/2"
            android:id="@+id/tv_players" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:12:2016"
        android:layout_below="@id/ll_players"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_time" />


    <ImageView
        android:layout_width="@dimen/lock_image_radius"
        android:layout_height="@dimen/lock_image_radius"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/iv_lock" />


</RelativeLayout>